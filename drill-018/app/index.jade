    .row
      .small-12.columns
        .panel
          h1 Promethesus the Greek god of forethought
    .row
      .small-6.columns
        input#zip(type='text', autofocus=true)
      .small-3.columns
        button#add.tiny.radius.expand Add Zip
      .small-3.columns
    .row
      .small-4.columns
        select#selector
      .small-4.columns
        button#getCam.tiny.radius Get Cam
      .small-4.columns
        button#clear.tiny.radius Clear
    .row
      .small-12.columns
        #container

    script(src='/js/vendor/jquery.js').
